{
    "name":         "mpalourdio/mpa-firephp-wrapper",
    "description":  "Lightweight ZF2 module that wraps firephp. Provides a view helper and a controller plugin. Easily configurable and usable",
    "license":      "MIT",
    "keywords":     [
        "firephp",
        "module",
        "zf2"
    ],
    "homepage":     "https://github.com/mpalourdio/MpaFirephpWrapper",
    "authors":      [
        {
            "name":     "@mpalourdio",
            "email":    "mpalourdio@gmail.com",
            "homepage": "https://github.com/mpalourdio"
        }
    ],
    "require":      {
        "php":                               ">=5.5",
        "firephp/firephp-core":              "0.4.0",
        "zendframework/zend-servicemanager": "2.3.*"
    },
    "require-dev":  {
        "firephp/firephp-core":               "0.4.0",
        "zendframework/zendframework":        "2.3.*",
        "zendframework/zend-developer-tools": "*",
        "phpunit/phpunit":                    "4.*",
        "squizlabs/php_codesniffer":          "1.5.*"
    },
    "suggest":      {
        "zendframework/zend-developer-tools": "zend-developer-tools if you want to profile firephp logging"
    },
    "autoload":     {
        "psr-4":    {
            "MpaFirephpWrapper\\": "src/"
        },
        "classmap": [
            "Module.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MpaFirephpWrapperTest\\": "tests/"
        }
    },
    "extra":        {
        "branch-alias": {
            "dev-master": "0.4.x-dev"
        }
    }
}
